<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@color/mainActivityBg"
    android:layout_margin="10dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/saloonReviewUserProfilePic"
        android:layout_width="40dp"
        android:layout_height="40dp"

        android:translationZ="90dp"

        android:background="@color/mainActivityBg"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"

        app:srcCompat="@drawable/ic_baseline_person_black_40" />

    <TextView
        android:id="@+id/saloonReviewUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@color/mainActivityBg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:layout_alignTop="@+id/saloonReviewUserProfilePic"
        android:layout_alignBottom="@+id/saloonReviewUserProfilePic"
        android:layout_toEndOf="@+id/saloonReviewUserProfilePic"
        android:layout_marginStart="40dp"
        android:gravity="center"

        android:text="@string/placeHolderUserName"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:translationZ="90dp"

        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/saloonReviewRatingImageView"
        android:layout_width="90dp"
        android:layout_height="50dp"

        android:translationZ="90dp"
        android:background="@color/mainActivityBg"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"

        android:layout_alignTop="@+id/saloonReviewUserProfilePic"
        android:layout_alignBottom="@+id/saloonReviewUserProfilePic"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp"

        app:srcCompat="@drawable/ic_rating_four_stars" />

    <TextView
        android:id="@+id/saloonReviewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:background="@color/mainActivityBg"

        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"

        android:layout_marginStart="120dp"
        android:layout_marginEnd="120dp"

        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:textAlignment="center"
        android:gravity="center"

        android:text="@string/textBullMagicImageDate"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:translationZ="90dp"

        />

    <RelativeLayout
        android:id="@+id/saloonReviewTextHolder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@drawable/bg_rounded_stroked_teal_700"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="30dp"

        >

        <TextView
            android:id="@+id/saloonReviewUserReviewText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="20dp"
            android:layout_marginTop="60dp"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="30dp"

            android:text="@string/placeHolderReview"
            android:textStyle="italic"
            android:textSize="12sp"/>

    </RelativeLayout>


</RelativeLayout>