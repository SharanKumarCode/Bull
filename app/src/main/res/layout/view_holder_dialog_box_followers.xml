<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/dialogFollowUserProfilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"

        app:srcCompat="@drawable/ic_baseline_person_black_40"
        />

    <TextView
        android:id="@+id/dialogFollowUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/placeHolderUserName"

        android:textAlignment="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"

        android:textColor="@color/black"

        android:layout_alignTop="@+id/dialogFollowUserProfilePic"
        android:layout_alignBottom="@+id/dialogFollowUserProfilePic"
        android:layout_toEndOf="@+id/dialogFollowUserProfilePic"/>

</RelativeLayout>