<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="10dp"
    android:id="@+id/bullMagicItemContainer">

    <TextView
        android:id="@+id/BullMagicShopName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="2dp"

        android:text="@string/textViewSaloonName"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"/>

    <ImageView
        android:contentDescription="@string/contentDescriptionBullImageList"
        android:id="@+id/BullMagicImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@+id/BullMagicShopName"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_bull"
        />

    <RelativeLayout
        android:id="@+id/BullMagicImageContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/black"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"

        android:layout_below="@+id/BullMagicImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/BullMagicUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"

            android:text="@string/placeHolderUserName"
            android:textColor="@color/white"
            android:textSize="18sp"/>

        <TextView
            android:id="@+id/BullMagicImageDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="2dp"

            android:text="@string/textBullMagicImageDate"
            android:layout_below="@+id/BullMagicUserName"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <View
            android:layout_width="2dp"
            android:layout_height="40dp"
            android:background="@color/white"

            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/BullMagicImageDate"
            android:layout_toStartOf="@+id/commentsTextView"/>

        <TextView
            android:id="@+id/commentsTextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_toStartOf="@+id/BullMagicCommentsImageView"
            android:layout_alignTop="@+id/NicesTextView"
            android:layout_alignBottom="@+id/NicesTextView"

            android:paddingTop="8dp"
            android:layout_marginEnd="10dp"

            android:text="@string/placeHolderCommentsCount"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <ImageView
            android:contentDescription="@string/contentDescriptionNiceStatus"
            android:id="@+id/BullMagicCommentsImageView"
            android:layout_width="30dp"
            android:layout_height="37dp"
            android:padding="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"

            android:src="@drawable/ic_baseline_comment_24"

            android:layout_toStartOf="@+id/NicesTextView"

            android:layout_alignTop="@+id/BullMagicNiceImageView"
            android:layout_alignBottom="@+id/BullMagicNiceImageView"
            />

        <View
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:background="@color/white"

            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/BullMagicImageDate"
            android:layout_toStartOf="@+id/NicesTextView"/>

        <TextView
            android:id="@+id/NicesTextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_toStartOf="@+id/BullMagicNiceImageView"
            android:layout_alignTop="@+id/BullMagicNiceImageView"
            android:paddingTop="8dp"
            android:layout_marginEnd="10dp"

            android:text="@string/placeHolderNiceCount"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <ImageView
            android:contentDescription="@string/contentDescriptionNiceStatus"
            android:id="@+id/BullMagicNiceImageView"
            android:layout_width="30dp"
            android:layout_height="37dp"
            android:padding="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="5dp"

            android:src="@drawable/ic_nice_filled_icon"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            />

        <TextView
            android:id="@+id/BullMagicImageCaptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/textImageCaption"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textColor="@color/design_default_color_background"

            android:layout_marginTop="30dp"
            android:layout_below="@+id/BullMagicNiceImageView"/>


    </RelativeLayout>

</RelativeLayout>