<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:contentDescription="@string/contentDescriptionBullImageList"
        android:id="@+id/BullMagicImageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        />

    <RelativeLayout
        android:id="@+id/BullMagicImageContentLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="0dp"

        android:background="@color/mainActivityBg"
        android:paddingStart="10dp"
        android:paddingEnd="5dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp"

        android:layout_below="@+id/BullMagicImageView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/BullMagicUserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Sharan Kumar"
            android:textColor="@color/white"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/BullMagicShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_below="@+id/BullMagicUserName"

            android:text="@string/textViewSaloonNameWithAt"
            android:textColor="@color/white"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/NicesTextView"
            android:layout_width="wrap_content"
            android:layout_height="30dp"

            android:layout_toStartOf="@+id/BullMagicNiceImageView"
            android:paddingTop="8dp"
            android:layout_marginEnd="10dp"

            android:text="20"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <ImageView
            android:contentDescription="@string/contentDescriptionNiceStatus"
            android:id="@+id/BullMagicNiceImageView"
            android:layout_width="30dp"
            android:layout_height="37dp"
            android:padding="5dp"
            android:layout_marginEnd="10dp"

            android:src="@drawable/ic_nice_filled_icon"

            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            />

    </RelativeLayout>

</RelativeLayout>